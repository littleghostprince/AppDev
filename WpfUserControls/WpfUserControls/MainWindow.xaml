<Window x:Class="WpfUserControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUserControls"
        xmlns:uc="clr-namespace:WpfUserControls.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <uc:UCButton revealProperty="This is a string!"/>
        <uc:UCButton >
            <uc:UCButton.revealProperty>
                <Rectangle Fill="Orange" Width="50" Height="50" />
            </uc:UCButton.revealProperty>
        </uc:UCButton>
    </StackPanel>
</Window>
