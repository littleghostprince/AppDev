<Window x:Class="WPFIntro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFIntro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Aquamarine" Loaded="Window_Loaded">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Button1" x:Name="Button1" Grid.Column="0" Click="Button_Click" Padding="40" Margin="5"/>
            <Button Content="Button2" x:Name="Button2" Grid.Column="1" Padding="40" Margin="5"/>

        </Grid>
        <TextBlock Text="TextBlock" FontWeight="Bold" FontSize="20"/>
        <TextBox Text="TextBox" Padding="4" TextChanged="TextBox_TextChanged"/>
        <TextBox Text="" Padding="4" x:Name="Text"/>
    </StackPanel>
</Window>
